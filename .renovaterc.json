{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "assignees": ["davide"],
  "extends": [":semanticCommits", "config:best-practices"],
  "kubernetes": {
    "managerFilePatterns": ["/cluster/.+\\.yaml$/"]
  },
  "packageRules": [
    {
      "automerge": true,
      "matchFileNames": [".devcontainer/**", ".forgejo/**"],
      "matchUpdateTypes": ["digest", "minor", "patch", "pin"]
    }
  ]
}
